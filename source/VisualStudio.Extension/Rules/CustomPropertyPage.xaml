<?xml version="1.0" encoding="utf-8"?>
<Rule
	Name="CustomPropertyPage"
	DisplayName="CustomPropertyPage"
	PageTemplate="tool"
	Description="CustomPropertyPage Description"
	xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile" />
    </Rule.DataSource>

    <Rule.Categories>
        <Category Name="General" DisplayName="General" Description="General" />
    </Rule.Categories>

    <StringProperty Category="General" Name="SomeProperty" DisplayName="Some Property"  Visible="True" Description="Sample property"/>
</Rule>